<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crown Clothing</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="header">
      <a href="/crown" class="logo-container">
        <img src="/assets/crown.svg" />
      </a>
      <div class="options">
        <a href="/shop" class="option">Shop</a>
        <a href="/shop/overview" class="option">Overview</a>
        <a href="/shop" class="option">Contact</a>
        <a href="/signin" class="option">Sign In</a>
        <div class="cart-icon" onclick="cartToggle()">
          <img class="shopping-icon" src="/assets/shopping-bag.svg" alt="" />
        </div>
        <div class="cart-dropdown">
          <div class="cart-items">
            <div class="cart-item">
              <img src="https://i.ibb.co/QdJwgmp/brown-cowboy.png" alt="item" />
              <div class="item-details">
                <span class="name">Brown Cowboy</span>
                <span class="price">4 * $35</span>
              </div>
            </div>
            <div class="cart-item">
              <img
                src="https://i.ibb.co/mJS6vz0/blue-jean-jacket.png"
                alt="item"
              />
              <div class="item-details">
                <span class="name">Blue Jean Jacket</span>
                <span class="price">1 * $90</span>
              </div>
            </div>
            <button class="custom-button">GO TO CHECKOUT</button>
          </div>
        </div>
      </div>
    </div>

    <div class="shop-page">
      <div class="collection-overview">
        <div class="collection-preview">
          <h2 class="title">Hats</h2>
          <div class="preview">
            <% for(let i=0; i< ( count< data_h.length ? count :
            data_h.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data_h[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data_h[i].name %></span>
                <span class="price"><%= data_h[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h1 class="title">Jackets</h1>
          <div class="preview">
            <% for(let i=0; i< (count < data_j.length ? count :
            data_j.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data_j[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data_j[i].name %></span>
                <span class="price"><%= data_j[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Sneakers</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data_s.length ? count :
            data_s.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data_s[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data_s[i].name %></span>
                <span class="price"><%= data_s[i].name %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Womens</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data_w.length ? count :
            data_w.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data_w[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data_w[i].name %></span>
                <span class="price"><%= data_w[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Mens</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data_m.length ? count :
            data_m.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data_m[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data_m[i].name %></span>
                <span class="price"><%= data_m[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script>
      function cartToggle() {
        p = document.querySelector('.cart-dropdown');
        p.classList.toggle('show');
      }
    </script>
  </body>
</html>